<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/dark_bg_shape</item>
        <item name="windowBgColor">@color/dark_bg</item>
        <item name="windowBgDrawable">@drawable/dark_bg</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="dividerColor">@color/divider</item>

        <item name="back_button">@mipmap/btn_back</item>
        <item name="close_button">@mipmap/btn_close</item>
        <item name="list_button">@mipmap/btn_list</item>
        <item name="more_button">@mipmap/btn_more</item>
        <item name="share_button">@mipmap/btn_share</item>

        <item name="secondary_color">#474747</item>
        <item name="primary_color">#ffffff</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/light_bg_shape</item>
        <item name="windowBgColor">@color/light_bg</item>
        <item name="windowBgDrawable">@drawable/light_bg</item>
        <item name="android:textViewStyle">@style/TextStyle.Light</item>
        <item name="dividerColor">@color/light_divider</item>

        <item name="back_button">@mipmap/w_btn_back</item>
        <item name="close_button">@mipmap/w_btn_close</item>
        <item name="list_button">@mipmap/w_btn_list</item>
        <item name="more_button">@mipmap/w_btn_more</item>
        <item name="share_button">@mipmap/w_btn_share</item>

        <item name="primary_color">#333333</item>
        <item name="secondary_color">#c1c1c1</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColorSecondary">#474747</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="TextStyle.Light" parent="@android:style/Widget.TextView">
        <item name="android:textColorSecondary">#c1c1c1</item>
        <item name="android:textColorPrimary">#333333</item>
    </style>
</resources>
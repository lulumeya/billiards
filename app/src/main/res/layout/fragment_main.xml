<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2">

    <TableRow>

        <TextView
            android:id="@+id/title"
            android:layout_span="2"
            android:padding="10dp"
            tools:text="1st game" />

        <TextView
            android:id="@+id/date"
            android:padding="10dp"
            tools:text="2015.04.2" />
    </TableRow>

    <pointer.wbc.com.billiardspointer.view.PrefixEditTextView
        android:id="@+id/history"
        android:layout_weight="1"
        android:background="#ffefefef"
        android:lineSpacingExtra="3dp"
        android:padding="10dp"
        android:singleLine="false"
        android:textSize="26sp"
        app:prefix="History\n"
        tools:text="1 0 3 4 0 1 2 3 4 0 1 1 0 2 1 1 0 2 2 2 2 1" />

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <pointer.wbc.com.billiardspointer.view.PrefixTextView
            android:id="@+id/inning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="20sp"
            app:prefix="inning\n"
            app:prefixSize="10sp"
            tools:text="19" />

        <pointer.wbc.com.billiardspointer.view.PrefixTextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="20sp"
            app:prefix="point\n"
            app:prefixSize="10sp"
            tools:text="38" />

        <pointer.wbc.com.billiardspointer.view.PrefixTextView
            android:id="@+id/recent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="20sp"
            app:prefix="recent\n"
            app:prefixSize="10sp"
            tools:text="1" />

        <pointer.wbc.com.billiardspointer.view.PrefixTextView
            android:id="@+id/highrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="20sp"
            app:prefix="highrun\n"
            app:prefixSize="10sp"
            tools:text="11" />

        <pointer.wbc.com.billiardspointer.view.PrefixTextView
            android:id="@+id/average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textSize="20sp"
            app:prefix="average\n"
            app:prefixSize="10sp"
            tools:text="2.000" />

    </LinearLayout>

    <TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point4"
            android:minHeight="55dp"
            android:tag="4"
            android:text="4"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point5"
            android:minHeight="55dp"
            android:tag="5"
            android:text="5"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point_more"
            android:minHeight="55dp"
            android:tag="▼"
            android:text="▼"
            android:textSize="30sp" />
    </TableRow>

    <TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point1"
            android:minHeight="85dp"
            android:tag="1"
            android:text="1"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point2"
            android:minHeight="85dp"
            android:tag="2"
            android:text="2"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point3"
            android:minHeight="85dp"
            android:tag="3"
            android:text="3"
            android:textSize="30sp" />
    </TableRow>

    <TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point0"
            android:layout_span="2"
            android:minHeight="85dp"
            android:tag="0"
            android:text="0"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_point_back"
            android:minHeight="85dp"
            android:tag="←"
            android:text="←"
            android:textSize="30sp" />

    </TableRow>

    <TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_newgame"
            android:minHeight="55dp"
            android:text="NEW GAME"
            android:textSize="13sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:minHeight="55dp"
            android:text="SAVE"
            android:textSize="13sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_share"
            android:minHeight="55dp"
            android:text="SHARE"
            android:textSize="13sp" />
    </TableRow>
</TableLayout>